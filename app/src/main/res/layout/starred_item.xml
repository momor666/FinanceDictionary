<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:padding="20dp"
                android:textSize="24sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="aaawwwwwweeeeerrrrttt1122334455"/>

            <com.like.LikeButton
                android:id="@+id/like_red_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical"
                app:icon_type="Star"
                android:padding="2dp"
                app:circle_start_color="@color/colorPrimary"
                app:like_drawable="@drawable/ic_heart_like_red"
                app:unlike_drawable="@drawable/ic_heart_unlike_white"
                app:dots_primary_color="@color/red"
                app:dots_secondary_color="@color/red"
                app:circle_end_color="@color/red"
                app:icon_size="25dp"
                app:liked="false"
                app:anim_scale_factor="2"
                app:is_enabled="true" />


            <!--<include-->
                <!--android:id="@+id/red_like"-->
                <!--layout="@layout/like_red_btn"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:gravity="center_vertical"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>